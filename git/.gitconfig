[user]
	name = nobody
	email = nobody@gmail.com

[alias]
	s = status
	c = checkout

[core]
	pager = delta
	editor = nvim

[init]
	defaultBranch = main

[pull]
	rebase = true

[delta]
	navigate = true
	line-numbers = true
	side-by-side = true
	syntax-theme = Dracula

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
